{
    "name": "Uni sur le sofa",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Bets center",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_title": "Bets Center",
      "default_popup": "popup.html"
    },
    "default_locale": "en",
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "permissions": [
      "https://*/*",
      "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "http://*.sofascore.com/*",
          "https://*.sofascore.com/*"
        ],
        "js": [
          "js/sofascore.js"
        ]
      },
      {
        "matches": [
          "http://*.unibet.fr/*",
          "https://*.unibet.fr/*"
        ],
        "js": [
          "js/unibet.js"
        ]
      }
    ]
  }

